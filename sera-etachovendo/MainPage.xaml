<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sera_etachovendo.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Blue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="imgFundo"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"
               Aspect="AspectFill"
               Grid.RowSpan="3"
               Grid.ColumnSpan="3"/>
<!--============================================================================================================================================================================-->  
        <Frame x:Name="FrameTemperatura"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"
               BackgroundColor=""
               BorderColor=""
               CornerRadius=""
               Grid.Row="1"
               Grid.Column="0">
            
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

            <Label x:Name="LabelTemperatura"
                   Text=""
                   FontSize="30"
                   HorizontalOptions="Center"
                   
                   Grid.Row="0"/>
            
            <Label x:Name="LabelCity"
                   Text=""
                   FontSize="15"
                   HorizontalOptions="Center"
                  
                   Grid.Row="1"/>
        </Grid>
        </Frame>

<!--============================================================================================================================================================================-->

        <Frame x:Name="FrameChuva"
               HorizontalOptions="Fill"
               VerticalOptions="Start"
              
               Grid.Row="1"
               Grid.Column="1">
            
            <Label x:Name="LabelChuvaDia"
                   Text=""
                   FontSize="25"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>

<!--============================================================================================================================================================================-->

        <Frame x:Name="FrameSol"
               HorizontalOptions="Fill"
               VerticalOptions="End"
               
               Grid.Row="1"
               Grid.Column="1">
            
            <Label x:Name="FrameTexto2"/>
        </Frame>

<!--============================================================================================================================================================================-->

        <Frame x:Name="FrameVento"
               HorizontalOptions="Fill"
               VerticalOptions="Start"
              
               Grid.Row="1"
               Grid.Column="2">

            <Label x:Name="FrameTexto3"/>
        </Frame>

<!--============================================================================================================================================================================-->

        <Frame x:Name="FrameLua"
               HorizontalOptions="Fill"
               VerticalOptions="End"
              
               Grid.Row="1"
               Grid.Column="2">

            <Label x:Name="FrameTexto4"/>
        </Frame>

<!--============================================================================================================================================================================-->

        <Frame x:Name="FrameSeila"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"
               Margin="5,10,5,10"
               Grid.Row="2"
               Grid.ColumnSpan="3">

            <Label x:Name="FrameTexto5"/>
        </Frame>

<!--============================================================================================================================================================================-->

    </Grid>
</ContentPage>
